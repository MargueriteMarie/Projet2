@model TPLOCAL1.Models.Formulaire

<head>
    <title>Formulaire</title>
    <link rel="stylesheet" href="\resources\Index.css" />
</head>

<body>
    <header>
        <img src="\resources\GroupeHN.png" class="image" alt="GroupHN" />
        <h1>Formulaire TP HN avis</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index/">Accueil</a></li>
            <li><a href="/Home/Index/OpinionList">Liste Avis</a></li>
        </ul>
    </nav>

    <section>
        <form asp-controller="Home" asp-action="ValidationFormulaire">
            <input type="number" asp-for="Id" hidden />
            <table>
                <caption>Informations personnelles</caption>
                <tr>
                    <td>Nom</td>
                    <td><input type="text" asp-for="Nom" ></td>
                </tr> 
                <tr>
                    <td>Prénom</td>
                    <td><input type="text" asp-for="Prenom" /></td>
                </tr>
                <tr>
                    <td>Sexe</td>
                    <td>
                        <select required asp-for="Sexe">
                            <option value="">Selectionner un sexe</option>
                            <option value="F">Femme</option>
                            <option value="H">Homme</option>
                            <option value="A">Autre</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>Adresse</td>
                    <td><input type="text" asp-for="Adresse" /></td>
                </tr>
                <tr>
                    <td>Code Postal</td>
                    <td><input type="number" asp-for="CodePostal" /></td>
                </tr>
                <tr>
                    <td>Ville</td>
                    <td><input type="text" asp-for="Ville" /></td>
                </tr>
                <tr>
                    <td>Adresse mail</td>
                    <td><input type="text" asp-for="AdresseMail" /></td>
                </tr>
            </table>
            <br />
            <table>
                <caption>Informations formation suivie</caption>
                <tr>
                    <td>Date début de formation</td>
                    <td><input type="date" asp-for="DateDebutFormation" /></td>
                </tr>
                <tr>
                    <td>Formation suivie</td>
                    <td>
                        <select required asp-for="NomFormation">
                            <option value="">Selectionner une formation</option>
                            <option value="Cobol">Formation Cobol</option>
                            <option value="Csharp">Formation langage orienté objet</option>
                            <option value="Formation-double">Formation à double compétence</option>
                        </select>
                    </td>
                </tr>          
            </table> 
            <br />
            <table>
                <caption>Avis sur la formation</caption>
                <tr>
                    <td>Formation Cobol</td>
                    <td><input type="text" asp-for="AvisCobol" /></td>
                </tr>
                <tr>
                    <td>Formation C#</td>
                    <td><input type="text" asp-for="AvisCsharp" /></td>
                </tr>
            </table>
            <br />
            <button type="submit">Valider</button>
        </form>
    </section>
</body>
