@model TPLOCAL1.Models.Formulaire

<head>
    <title>Page de validation</title>
    <link rel="stylesheet" href="\resources\Index.css" />
</head>

<body>
    <header>
        <img src="\resources\GroupeHN.png" class="image" alt="GroupHN" />
        <h1>Page de validation</h1>
    </header>

    <nav>
        <ul>
            <li><a href="/Home/Index/">Accueil</a></li>
            <li><a href="/Home/Index/OpinionList">Liste Avis</a></li>
        </ul>
    </nav>

    <section>
        <p>Votre formulaire a bien été pris en compte</p>
        <table>
            <caption>Informations personnelles</caption>
            <tr>
                <td>Nom</td>
                <td>@ViewBag.Formulaire.Nom</td>
            </tr>
            <tr>
                <td>Prénom</td>
                <td>@ViewBag.Formulaire.Prenom</td>
            </tr>
            <tr>
                <td>Sexe</td>
                <td>@ViewBag.Formulaire.Sexe</td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>@ViewBag.Formulaire.Adresse</td>
            </tr>
            <tr>
                <td>Code Postal</td>
                <td>@ViewBag.Formulaire.CodePostal</td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>@ViewBag.Formulaire.Ville</td>
            </tr>
            <tr>
                <td>Adresse mail</td>
                <td>@ViewBag.Formulaire.AdresseMail</td>
            </tr> 
        </table>
        <br />
        <table>
            <caption>Informations formation suivie</caption>
            <tr>
                <td>Date début de formation</td>
                <td>@ViewBag.Formulaire.DateDebutFormation</td>
            </tr>
            <tr>
                <td>Formation suivie</td>
                <td>@ViewBag.Formulaire.NomFormation</td>
            </tr>
        </table>
        <br />
        <table>
            <caption>Avis sur la formation</caption>
            <tr>
                <td>Formation Cobol</td>
                <td>@ViewBag.Formulaire.AvisCobol</td>
            </tr>
            <tr>
                <td>Formation C#</td>
                <td>@ViewBag.Formulaire.AvisCsharp</td>
            </tr>
        </table>
    </section>
</body>
